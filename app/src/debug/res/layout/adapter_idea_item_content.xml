<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/idea_card_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/idea" />

            <TextView
                android:id="@+id/idea_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/idea_card_padding"
                android:text="读后感" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/idea_card_padding"
            android:layout_marginRight="@dimen/idea_card_padding"
            android:layout_height="1dp"
            android:background="@color/point_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/idea_card_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idea_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/idea_card_padding"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="大学之道"
                android:textColor="@color/black"
                android:textSize="@dimen/content_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idea_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="大学之道在明明德在止于至善"
                android:textSize="@dimen/content_size" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_check_detail"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/badge_corner_radius"
            android:background="@drawable/text_bg_shape"
            android:gravity="center"
            android:text="@string/check_detail"
            android:textSize="@dimen/text_size_mini" />
    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_elevation"
    app:contentPadding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardItem_padding"
            android:text="@string/what_to_write"
            android:textColor="@color/black"
            android:textSize="@dimen/content_title_size"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/daily_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardItem_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/daily_mine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/alert_to_left"
                android:text="@string/write_daily"
                android:textColor="@color/black"
                android:textSize="@dimen/content_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/read_pression_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardItem_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/read_pression_mine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/alert_to_left"
                android:text="@string/write_read_pression"
                android:textColor="@color/black"
                android:textSize="@dimen/content_size" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
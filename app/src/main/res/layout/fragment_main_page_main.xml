<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_clude"></include>
    <!--不加linearLayout 测量toolbar了两次  加了后 自定义控件 测量准确-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.qsys.yousi.common.widget.card.SlideCardPanel
            android:id="@+id/cardPanel_main_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.qsys.yousi.common.widget.card.CardItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardItem_padding" />

            <com.example.qsys.yousi.common.widget.card.CardItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardItem_padding" />

            <com.example.qsys.yousi.common.widget.card.CardItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardItem_padding" />

            <com.example.qsys.yousi.common.widget.card.CardItemView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardItem_padding" />
        </com.example.qsys.yousi.common.widget.card.SlideCardPanel>
    </LinearLayout>
</LinearLayout>